<!DOCTYPE html>
<html lang="en">
@if (IsSectionDefined("Scripts"))
{
    @RenderSection("Scripts", required: false)
}
<head>

    <link rel="stylesheet" href="~/css/site.css"/> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./output.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />

    <!-- Scripts -->
    <script src="scrypt.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="../path/to/flowbite/dist/flowbite.min.js"></script>
    
</head>

<body>
    <header class="text-white body-font bg-gray-800" >
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
                <div class="text-white bg-orange-600 border-0 py-1 px-8 focus:outline-none hover:bg-orange-500 rounded-tr-3xl rounded-bl-3xl round text-lg">
                    <div style="vertical-align: inherit;">
                        <div style="vertical-align: inherit;">ARCTECH</div>
                    </div>
                </div>
            </a>
            <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
                <a class="mr-5 hover:text-gray-400" asp-controller="TaskPage" asp-action="NewTaskPage">
                    <div style="vertical-align: inherit;" >
                        <div style="vertical-align: inherit;">Создать заказ</div>
                    </div>
                </a>
                <a class="mr-5 hover:text-gray-400">
                    <div style="vertical-align: inherit;">
                        <div style="vertical-align: inherit;">ТЕКУЩИЙ</div>
                    </div>
                </a>
                <a class="mr-5 hover:text-gray-400 text-orange-600 animate-pulse">
                    <div style="vertical-align: inherit;">
                        <div style="vertical-align: inherit;">ГОРЯЩИЙ</div>
                    </div>
                </a>
                <a class="mr-5 hover:text-gray-400">
                    <div style="vertical-align: inherit;">
                        <div style="vertical-align: inherit;">ВСЕ</div>
                    </div>
                </a>
            </nav>
            <button class="inline-flex items-center border-2 py-1 px-3 focus:outline-none hover:bg-orange-600 rounded-l-lg rounded-tr-lg text-white1 mt-4 md:mt-0">
                <font style="vertical-align: inherit;">
                    <font style="vertical-align: inherit;">НАПИСАТЬ</font>
                </font>
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </header> 

    
            @RenderBody()
        

    <footer class="text-gray-600 body-font bg-gray-800">
        <div class="container px-5 py-4 mx-auto flex items-center sm:flex-row flex-col">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
                <div class="text-white bg-orange-600 border-0 py-1 px-8 focus:outline-none hover:bg-orange-500 rounded-tr-3xl rounded-bl-3xl round text-lg">
                    <div style="vertical-align: inherit;">
                        <div style="vertical-align: inherit;">ARCTECH</div>
                    </div>
                </div>
            </a>
            <p class="text-sm text-gray-500 sm:ml-4 sm:pl-4 sm:border-l-2 sm:border-gray-200 sm:py-2 sm:mt-0 mt-4">
                <div style="vertical-align: inherit;">
                    <div style="vertical-align: inherit;">© 2020 Arctech — </div>
                </div>
                <a class="ml-3 text-gray-500 px-8">
                    +0 999 888 77 66
                </a>
                </span>
        </div>
    </footer>

  

</body>
</html>
