                    @* Skript для того чтоб можно было отправить выше оформлинные данные *@
                    <script>
                        window.addInputsAndSubmit = function (userId) {
                            // Создаём скрытые поля для передачи данных
                            console.log("Функция успешно вызвана")
                            const form = document.getElementById('myForm');
                            if (!form) {
                                console.error("форма с Id=myForm не была найдена ");
                                return;
                            }
                            else console.log("Форма заполнена правильно.");

                            //Передача значения Id;
                            const IdInput = document.createElement('input');
                            IdInput.type = 'hidden';
                            IdInput.name = "UserGeneral_Admin.Id";
                            IdInput.value = userId;
                            
                            // Передача табельного номера
                            const Namer_for_projectInput = document.createElement('input');
                            Namer_for_projectInput.type = 'hidden';
                            Namer_for_projectInput.name = 'UserGeneral_Admin.Namer_for_project';
                            const namer_for_projectInput = document.getElementById(`Namer_for_projectskript_${userId}`);
                            if (namer_for_projectInput) {
                                Namer_for_projectInput.value = namer_for_projectInput.value;
                            }
                            else {
                                console.error("Элемент с данными Табельного номера не найден ");
                            }

                            //Передача имени пользователя
                            const FistNameUserInput = document.createElement('input');
                            FistNameUserInput.type = 'hidden';
                            FistNameUserInput.name = 'UserGeneral_Admin.FistNameUser';
                            const fistNameUser = document.getElementById(`FistNameUserskr_${userId}`);
                            if (fistNameUser) {
                                FistNameUserInput.value = fistNameUser.value;
                            }
                            else {
                                console.error("Элемент с данными Имя пользователя не найден")
                            }

                            //Передача фамилии пользователя
                            const SecondNameUserInput = document.createElement('input');
                            SecondNameUserInput.type = 'hidden';
                            SecondNameUserInput.name = 'UserGeneral_Admin.SecondNameUser';
                            const secondNameUserInput = document.getElementById(`SecondNameUserskr_${userId}`);
                            SecondNameUserInput.value = secondNameUserInput.value;

                            // Передача роли пользователя
                            const RoleUserInput = document.createElement('input');
                            RoleUserInput.type = 'hidden';
                            RoleUserInput.name = 'UserGeneral_Admin.RoleUser';
                            const roleuser = document.getElementById(`RoleUserscr_${userId}`)
                            RoleUserInput.value = roleuser.value;

                            // Передача логина пользователя
                            const NameUserInput = document.createElement('input');
                            NameUserInput.type = 'hidden';
                            NameUserInput.name = 'UserGeneral_Admin.NameUser';
                            const nameuser = document.getElementById(`NameUserskr_${userId}`)
                            NameUserInput.value = nameuser.value;

                            // Передача пароля пользователя
                            const passwordInput = document.createElement('input');
                            passwordInput.type = 'hidden';
                            passwordInput.name = 'UserGeneral_Admin.PasswordUser';
                            const password = document.getElementById(`PasswordUserskr_${userId}`)
                            passwordInput.value = password.value;

                            form.appendChild(Namer_for_projectInput);
                            form.appendChild(FistNameUserInput);
                            form.appendChild(SecondNameUserInput);
                            form.appendChild(RoleUserInput);
                            form.appendChild(NameUserInput);
                            form.appendChild(passwordInput);
                            form.appendChild(IdInput);

                            form.submit(); // Отправляем форму
                        }
                    </script>
