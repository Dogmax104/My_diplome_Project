            <script>
                function openTab(evt, tabName) {
                    var i, tabcontent, tablinks;

                    // Скрываем все вкладки
                    tabcontent = document.getElementsByClassName("tabcontent");
                    for (i = 0; i < tabcontent.length; i++) {
                        tabcontent[i].classList.add("hidden");
                    }

                    // Убираем активный стиль у всех кнопок
                    tablinks = document.querySelectorAll(".tab-button");
                    tablinks.forEach(button => {
                        button.classList.remove("bg-orange-600", "border-orange-600");
                        button.classList.add("bg-gray-800", "border-white"); // Возвращаем стандартные стили
                    });

                    // Показываем выбранную вкладку
                    document.getElementById(tabName).classList.remove("hidden");

                    // Добавляем активный стиль текущей кнопке
                    evt.currentTarget.classList.add("bg-orange-600", "border-orange-600");
                    evt.currentTarget.classList.remove("bg-gray-800", "border-white"); // Убираем старые стили
                }

                // Устанавливаем tab1 активным при загрузке страницы
                document.addEventListener("DOMContentLoaded", function () {
                    document.getElementById("tab1").classList.remove("hidden"); // Отображаем tab1
                    let firstTabButton = document.querySelector(".tab-button");
                    firstTabButton.classList.add("bg-orange-600", "border-orange-600");
                    firstTabButton.classList.remove("bg-gray-800", "border-white");
                });
            </script>

